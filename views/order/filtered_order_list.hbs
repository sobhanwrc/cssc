<div class="content">
    <div class="">
        <div class="page-header-title">
            <h4 class="page-title">Order</h4>
        </div>
    </div>
    <div class="page-content-wrapper ">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="panel panel-primary">
                        <div class="panel-body">
                            <h4 class="m-b-30 m-t-0 pull-left">Order List</h4>
                            <div class="btn-group dropdown-btn-group pull-right">
                                <a href="/orders/add">
                                    <button type="button" class="btn btn-primary waves-effect waves-light">Add Order</button>
                                </a>
                            </div>
                            <div class="clearfix"></div>
                            <form class="form-inline m-b-30"  role="form" name="filterorder" id="filterorder" method="POST" action="/orders/filter" novalidate="">
                                <div class="form-group"> <label class="sr-only" for="start_date">Start Date</label> <input type="text" class="form-control datepicker"
                                        name="start_date" id="start_date" placeholder="Enter start date" value="{{start_date}}"></div>
                                <div class="form-group m-l-10">
                                    <label class="sr-only" for="end_date">End date</label> <input type="text" class="form-control datepicker"
                                        name="end_date" id="end_date" placeholder="end_date" value="{{end_date}}"></div>
                                <div class="form-group m-l-10">
                                    <button type="submit" class="btn btn-success waves-effect waves-light m-l-10 ">Submit</button>
                                </div>
                                <div class="form-group m-l-10">
                                    <button type="button" id="clear_filter" class="btn btn-success waves-effect waves-light m-l-10 ">Clear</button>
                                </div>
                            </form>
                            <div class="row">
                                <div class="col-md-12 col-sm-12 col-xs-12">
                                    {{#if message}}
                                    <div class="alert alert-success">{{message}}</div>

                                    {{/if}}
                                    <table id="datatable-filter" class="table table-striped table-bordered">
                                        <thead>
                                            <tr>
                                                <th>Sl No</th>
                                                <th>Purchase Order</th>
                                                <th>Part No</th>
                                                <th>Location</th>
                                                <th>Price</th>
                                                <th>Order Date</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {{#each orders}}
                                            <tr>
                                                <td>{{inc @index}}</td>
                                                <td>{{this.po}}</td>
                                                <td>{{this.pn}}</td>
                                                <td>{{this.location}}</td>
                                                <td>{{this.price}}</td>
                                                <td>{{dateFormat this.ordered "MM-DD-YYYY"}}</td>
                                                <td>
                                                    <a title="Edit" href="/orders/edit/{{this.id}}/"><button type="button" class="btn waves-effect btn-default edit-btn"> <i class="fa fa-edit"></i> </button></a>
                                                    <a title="Delete" href="/orders/delete/{{this.id}}/" onclick="return confirm('Do you really want to delete the current admin ?');"><button type="button" class="btn waves-effect btn-default delete-btn"> <i class="fa fa-remove"></i> </button></a>
                                                    <a title="Preview" href="/orders/preview/{{this.po}}/"><button type="button" class="btn waves-effect btn-default print-btn"> <i class="fa fa-print"></i> </button></a>
                                                </td>
                                            </tr>
                                            {{/each}}
                                        </tbody>
                                    </table>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>