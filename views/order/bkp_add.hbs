<div class="content">
    <div class="">
        <div class="page-header-title">
            
        </div>
    </div>
    <div class="page-content-wrapper ">
      <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div class="panel panel-primary">
                    <div class="panel-body">
                        <h4 class="m-t-0 m-b-0">Add Order</h4>
                       
                        <div class="row">
                            <form class="" name="frmAddOrder" id="frmAddOrder" method="POST" action="" novalidate="" enctype="multipart/form-data">
                            <div class="col-sm-6 col-xs-12">
                                <div class="m-t-20">
                                        <div class="form-group">
                                            <label>Part Number</label>
                                            <div>
                                                <input type="text" id="pn" name="pn" class="form-control" required="required" data-parsley-required-message="Please enter part number of the product" placeholder="Please enter part number of the product" >
                                            </div>
                                            
                                        </div>
                                        
                                        <div class="form-group">
                                            <label>Order Date</label>
                                            <div>
                                                <input type="text" id="order_date" name="order_date" class="form-control datepicker" required="required" data-parsley-required-message="Please enter order date" placeholder="Please enter order date" >
                                            </div>
                                        </div>
                                        
                                        <div class="form-group">
                                            <label>Quantity</label>
                                            <div>
                                                <input type="text" id="qty" name="qty" class="form-control" minlength="1" maxlength="10" required="required" data-parsley-required-message="Please enter quantity"
                                                data-parsley-type="number" data-parsley-type-message="Must be number"
                                                data-parsley-minlength="1" data-parsley-maxlength="10" placeholder="Please enter quantity" >
                                            </div>
                                        </div>
                                        
                                        <div class="form-group">
                                            <div>
                                                <button type="submit" class="btn btn-primary waves-effect waves-light"> Add </button>
                                            </div>
                                        </div>
                                    
                                </div>
                            </div>
                            <div class="col-sm-6 col-xs-12">
                                <div class="m-t-20">
                                        <div class="form-group">
                                            <label>Location</label>
                                            <div>
                                                <input type="text" id="location" name="location" class="form-control" required="required" data-parsley-required-message="Please enter location" placeholder="Please enter location" >
                                            </div>
                                        </div>
                                        
                                        <div class="form-group">
                                            <label>Due Date</label>
                                            <div>
                                                <input type="text" id="due_date" name="due_date" class="form-control datepicker" required="required" data-parsley-required-message="Please enter due date" placeholder="Please enter due date" >
                                            </div>
                                        </div>
                                </div>
                            </div>
                            
                        </form>
                            <table class="table" id="order-table">
                                <thead>
                                    <tr>
                                        
                                        <th>PN</th>
                                        <th>Location</th>
                                        <th>Order Date</th>
                                        <th>Due Date</th>
                                        <th>Qty</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    
                                </tbody>
                            </table>
                            <button type="button" class="btn btn-primary waves-effect waves-light" id="btn-submit" style="display:none;"> Submit </button>
                        
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div> 
</div>
</div>