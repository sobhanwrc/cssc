<div class="content">
    <div class="">
        <div class="page-header-title">
        </div>
    </div>
    <div class="page-content-wrapper">
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <div class="panel panel-primary">
                        <div class="panel-body">
                            <h4 class="m-t-0 m-b-0">Change Password</h4>
                            <div class="row">
                                <form class="" name="frmChangePass" id="frmChangePass" method="POST" action="" novalidate="true">
                                    <input type="hidden" name="user_id" id="user_id" value="{{result.0.id}}">
                                    <div class="col-sm-12 col-xs-12">
                                        <div class="m-t-20">
                                            <div class="form-group">
                                                <label>Old Password</label>
                                                <div>
                                                    <input type="password" id="old_pass" name="old_pass" class="form-control" required="required" placeholder="Please enter old password of the user">
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label>New Password</label>
                                                <div>
                                                    <input type="password" id="new_pass" name="new_pass" class="form-control" required="required" placeholder="Please enter new password of the user">
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label>Confirm Password</label>
                                                <div>
                                                    <input type="password" id="renew_pass" name="renew_pass" class="form-control" required="required" placeholder="Please enter confirm password of the user">
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div>
                                                    <button type="submit" class="btn btn-primary waves-effect waves-light"> Update </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div> 
    </div>
</div>