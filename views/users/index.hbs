<div class="content">
    <div class="">
        <div class="page-header-title">
        </div>
    </div>
    <div class="page-content-wrapper">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="panel panel-primary">
                        <div class="panel-body">
                            <div class="btn-toolbar">
                                <div class="pull-left">
                                    <h4 class="m-b-0 m-t-0">User List</h4>
                                </div>
                                <div class="btn-group dropdown-btn-group pull-right">
                                    <a href="/users/add">
                                        <button type="button" class="btn btn-primary waves-effect waves-light">Add User</button>
                                    </a>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12 col-sm-12 col-xs-12">
                                    {{#if message}}
                                    <div class="alert alert-success">{{message}}</div>
                                    {{/if}}
                                    <table id="jmaTable" class="table table-striped table-bordered others">
                                        <thead>
                                            <tr>
                                                <th>Sl No</th>
                                                <th>First Name</th>
                                                <th>Last Name</th>
                                                <th>Username</th>
                                                <th style="width: 15%;">Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {{#each users}}
                                            <tr>
                                                <td>{{inc @index}}</td>
                                                <td>{{this.first_name}}</td>
                                                <td>{{this.last_name}}</td>
                                                <td>{{this.username}}</td>
                                                <td>
                                                    <a title="Edit" href="/users/edit/{{this.id}}/"><button type="button" class="btn waves-effect btn-default edit-btn"> <i class="fa fa-edit"></i> </button></a>
                                                    <a title="Delete" href="/users/delete/{{this.id}}/" onclick="return confirm('Do you really want to delete the current user ?');"><button type="button" class="btn waves-effect btn-danger delete-btn"> <i class="fa fa-trash"></i> </button></a>
                                                    <a title="Change Password" href="/users/change_password/{{this.id}}/"><button type="button" class="btn waves-effect btn-primary edit-btn"> <i class="fa fa-key"></i> </button></a>
                                                </td>
                                            </tr>
                                            {{/each}}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>