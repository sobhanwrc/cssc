<div class="content">
    <div class="">
        <div class="page-header-title">Locations</div>
    </div>
    <div class="page-content-wrapper">
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <div class="panel panel-primary">
                        <div class="panel-body">
                            <h4 class="m-t-0 m-b-0">Edit Location</h4>
                            <div class="row">
                                <form class="" name="frmLocationEdit" id="frmLocationEdit" method="POST" action="/locations/edit/{{result.0.id}}" novalidate="">
                                    <input type="hidden" name="location_id" id="location_id" value="{{result.0.id}}">
                                    <div class="col-sm-12 col-xs-12">
                                        <div class="m-t-20">
                                            <div class="form-group">
                                                <label>Code</label>
                                                <div>
                                                    <input type="text" id="code" name="code" class="form-control" required="required" data-parsley-required-message="Please enter code of the location" placeholder="Please enter first name of the location" value="{{result.0.init}}">
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label>Suburb</label>
                                                <div>
                                                    <input type="text" id="sum" name="sum" class="form-control" required="required" data-parsley-required-message="Please enter suburb of the location" placeholder="Please enter suburb of the location" value="{{result.0.sum}}">
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label>Name</label>
                                                <div>
                                                    <input type="text" id="name" name="name" class="form-control" required="required" data-parsley-required-message="Please enter name of the location" placeholder="Please enter name of the location" value="{{result.0.name}}">
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label>Person Name</label>
                                                <div>
                                                    <input type="text" id="person_name" name="person_name" class="form-control" required="required" data-parsley-required-message="Please enter person name of the location" placeholder="Please enter person name of the location" value="{{result.0.person}}">
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label>Phone No.</label>
                                                <div>
                                                    <input type="text" id="phone_no" name="phone_no" class="form-control" required="required" data-parsley-required-message="Please enter phone no. of the location" placeholder="Please enter phone no. of the location" value="{{result.0.phone}}">
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label>Fax</label>
                                                <div>
                                                    <input type="text" id="fax" name="fax" class="form-control" required="required" data-parsley-required-message="Please enter fax of the location" placeholder="Please enter fax of the location" value="{{result.0.fax}}">
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label>Street</label>
                                                <div>
                                                    <input type="text" id="street" name="street" class="form-control" required="required" data-parsley-required-message="Please enter street of the location" placeholder="Please enter street of the location" value="{{result.0.street}}">
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label>City</label>
                                                <div>
                                                    <input type="text" id="city" name="city" class="form-control" required="required" data-parsley-required-message="Please enter city of the location" placeholder="Please enter city of the location" value="{{result.0.city}}">
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div>
                                                    <button type="submit" class="btn btn-primary waves-effect waves-light"> Update </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div> 
    </div>
</div>