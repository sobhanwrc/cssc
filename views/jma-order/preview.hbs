<div class="content">
    <div class="">
        <div class="page-header-title">
            <h4 class="page-title">Invoice</h4>
        </div>
    </div>
    <div class="page-content-wrapper ">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-xs-12">
                                <div class="invoice-title">
                                    <h4 class="pull-right">Order # {{order_id}}</h4> <img src="/assets/images/logo_white.png" height="30" class="hidden-print"> <img src="/assets/images/logo.png" height="30" class="hidden visible-print"></div>
                                <hr>
                                <div class="row">
                                    <div class="col-xs-6">
                                        <address> <strong>Billed To:</strong>
                                            <br> {{customer}}
                                            </address>
                                    </div>
                                    <div class="col-xs-6 text-right">
                                        <address> <strong>Shipped To:</strong>
                                            <br> {{customer}}
                                            </address>
                                    </div>
                                </div>
                                <div class="row">
                                    
                                    <div class="col-xs-6">
                                        <address> <strong>Order Date:</strong>
                                            <br> {{dateFormat order_date "MM-DD-YYYY"}}
                                            <br>
                                            <br> </address>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="panel panel-primary">
                                    <div class="panel-heading">
                                        <h3 class="panel-title"><strong>Order summary</strong></h3></div>
                                    <div class="panel-body">
                                        <div class="table-responsive">
                                            <table class="table">
                                                <thead>
                                                    <tr>
                                                        <td><strong>Part No</strong></td>
                                                        <td class="text-center"><strong>Price</strong></td>
                                                        <td class="text-center"><strong>Quantity</strong></td>
                                                        <td class="text-right"><strong>Totals</strong></td>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    {{#each orders}}
                                                    <tr>
                                                        <td>{{this.pn}}</td>
                                                        <td class="text-center">${{this.price}}</td>
                                                        <td class="text-center">{{this.qty}}</td>
                                                        <td class="text-right">${{total_price this.price this.qty}}</td>
                                                    </tr>
                                                    {{/each}}
                                                    
                                                    <tr>
                                                        <td class="thick-line"></td>
                                                        <td class="thick-line"></td>
                                                        <td class="thick-line text-center"> <strong>Subtotal</strong></td>
                                                        <td class="thick-line text-right">${{sub_total}}</td>
                                                    </tr>
                                                    <tr>
                                                        <td class="no-line"></td>
                                                        <td class="no-line"></td>
                                                        <td class="no-line text-center"> <strong>Shipping</strong></td>
                                                        <td class="no-line text-right">$0.00</td>
                                                    </tr>
                                                    <tr>
                                                        <td class="no-line"></td>
                                                        <td class="no-line"></td>
                                                        <td class="no-line text-center"> <strong>Total</strong></td>
                                                        <td class="no-line text-right">
                                                            <h4 class="m-0">${{sub_total}}</h4></td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </div>
                                        <div class="hidden-print">
                                            <div class="pull-right"> <a href="javascript:window.print()" class="btn btn-success waves-effect waves-light"><i class="fa fa-print"></i></a> <a href="#" class="btn btn-primary waves-effect waves-light">Send</a></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>